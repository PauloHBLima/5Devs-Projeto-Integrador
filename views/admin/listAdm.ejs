<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <!--<link rel="stylesheet" href="/css/product.css">!-->
    <!--<link rel="stylesheet" href="/css/listadm.css">!-->
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <title>5 Devs</title>
</head>

<body>

    <%- include('../partials/header') %>

        <section class="">
            <div class="containerAll">

                <a href="/home" class="btn btn-warning mx-auto">CADASTRAR</a>
                <table class="table table-dark table-striped w-75 p-3 mx-auto">
                    <thead>
                      <tr>
                        <th scope="col">Identificador</th>
                        <th scope="col">Imagem</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Preço</th>
                        <th scope="col">Descrição</th>
                        <th scope="col">Ativo</th>
                        <th scope="col">Ações</th>
                      </tr> 
                    </thead>
                    <tbody>
                        <% products.forEach(product=> { %>
                      <tr>
                        <th scope="row"><%= product.id %></th>
                        <td><img class="" src="<%= product.image %>"alt="Imagem" width="70px" height="70px">Mark</td>
                        <td><%= product.name%></td>
                        <td>
                            <%= product.price%>
                        </td>
                        <td>
                            <%=product.description%>
                        </td>
                        <td>
                            <%=product.active%>
                        </td>
                        <td>
                            <a href="/admin/oneProduct/<%= product.id %>" type="button" class="btn btn-primary">Abrir</a>
                            <a href="/admin/editProduct/<%= product.id %>" type="button"class="btn btn-secondary">Editar</a>
                            <a href="/admin/<%= product.id %>?_method=DELETE" method="POST"  type="submit" class="btn btn-danger">Excluir</a>
                            
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
            </div>
        </section>

        <%- include('../partials/footer') %>
</body>

</html>